<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@+id/createPost"
        app:layout_constraintEnd_toEndOf="@+id/createPost"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/createPost"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/createPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchPostCreationActivity"
        android:text="Create Post"
        app:layout_constraintBottom_toTopOf="@+id/EditPostButton"
        app:layout_constraintEnd_toEndOf="@+id/EditPostButton"
        app:layout_constraintStart_toStartOf="@+id/EditPostButton"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/EditPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchEditPostActivity"
        android:text="Edit Post Button"
        app:layout_constraintBottom_toTopOf="@+id/ViewPostButton"
        app:layout_constraintEnd_toEndOf="@+id/ViewPostButton"
        app:layout_constraintStart_toStartOf="@+id/ViewPostButton"
        app:layout_constraintTop_toBottomOf="@+id/createPost"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/ViewPostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchViewPostActivity"
        android:text="View Post Button"
        app:layout_constraintBottom_toTopOf="@+id/deletePost"
        app:layout_constraintEnd_toEndOf="@+id/deletePost"
        app:layout_constraintStart_toStartOf="@+id/deletePost"
        app:layout_constraintTop_toBottomOf="@+id/EditPostButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/deletePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchDeletePostActivity"
        android:text="Delete Post"
        app:layout_constraintBottom_toTopOf="@+id/viewCommunitiesButton"
        app:layout_constraintEnd_toEndOf="@+id/viewCommunitiesButton"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/viewCommunitiesButton"
        app:layout_constraintTop_toBottomOf="@+id/ViewPostButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/viewCommunitiesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:onClick="launchViewCommunityActivity"
        android:text="View communities"
        app:layout_constraintBottom_toTopOf="@+id/createCommunity"
        app:layout_constraintEnd_toEndOf="@+id/createCommunity"
        app:layout_constraintStart_toStartOf="@+id/createCommunity"
        app:layout_constraintTop_toBottomOf="@+id/deletePost"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/createCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchCreateCommunityActivity"
        android:text="Create community"
        app:layout_constraintBottom_toTopOf="@+id/deleteCommunity"
        app:layout_constraintEnd_toEndOf="@+id/deleteCommunity"
        app:layout_constraintStart_toStartOf="@+id/deleteCommunity"
        app:layout_constraintTop_toBottomOf="@+id/viewCommunitiesButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/deleteCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="launchDeleteCommunityActivity"
        android:text="Delete Community"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createCommunity"
        app:layout_constraintVertical_bias="0.5" />



</androidx.constraintlayout.widget.ConstraintLayout>