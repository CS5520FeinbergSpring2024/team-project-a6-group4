<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#d3d3d3"/> <!-- Light gray when pressed -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor"/> <!-- Default gray background -->
            <corners android:radius="4dp"/>
             <!-- Optional border -->
        </shape>
    </item>
</selector>
